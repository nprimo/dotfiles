# This is Git's per-user configuration file.
[user]
	name = nprimo
	email = primo.niccolo@gmail.com
[core]
	editor = nvim
[init]
	defaultBranch = main
[alias]
	graph = "log --all --graph --decorate --oneline"
	update = !git fetch --prune --all && git pull --ff-only origin $(git branch --show-current)
	fpush = !git push --force-with-lease origin HEAD
[rerere] 
	enabled = true
